@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <div class="navbar-nav ms-auto mx-lg-auto py-0 col-md-4 justify-content-end">
        <ul class="navbar-nav">

            <li class="nav-item">
                <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="nav-link btn btn-link  text-white"> <i class="fa fa-sign-out" aria-hidden="true"></i></button>

                </form>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" id="showToChartButton" asp-controller="Order"><i class="fa-solid fa-shopping-cart"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa-solid fa-user"></i></a>
            </li>
           
        </ul>
    </div>

}
else
{
    <div class="navbar-nav ms-auto mx-lg-auto py-0 col-md-4 justify-content-end">
        <a class="nav-link text-white" asp-controller="Account" asp-action="Register">Register</a>
        <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
    </div>
}

