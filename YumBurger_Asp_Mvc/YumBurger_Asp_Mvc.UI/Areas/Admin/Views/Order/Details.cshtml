@model YumBurger_Asp_Mvc.UI.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstimatedArrivalDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstimatedArrivalDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActualArrivalDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActualArrivalDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.Id)
        </dd>
    </dl>
</div>


<div class="row">
    <div class="col-md-6 text-center">
        <h3 class="text-primary bg-dark">Menus In Order</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Total Price
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var menuOrders in Model.OrdersMenus)
                {
                    <tr>
                        <td>
                            @menuOrders.Menu.Name
                        </td>
                        <td>
                            <img class="w-25 h-25" src="~/assest/img/menuPictures/@menuOrders.Menu.PicturePath" alt="" />
                        </td>
                        <td>
                            @menuOrders.Menu.Price
                        </td>
                        <td>
                            @menuOrders.Quantity
                        </td>
                        <td>
                            @(menuOrders.Menu.Price * menuOrders.Quantity)
                        </td>
                    </tr>
                }

            </tbody>

        </table>



    </div>
    <div class="col-md-6">
        <h3 class="text-primary bg-dark">Extras In Order</h3>
        <table class="table text-center">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Total Price
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var extraOrders in Model.OrdersExtras)
                {
                    <tr>
                        <td>
                            @extraOrders.Extra.Name
                        </td>
                        <td>
                            <img class="w-25 h-25" src="~/assest/img/ExtrasPictures/@extraOrders.Extra.PicturePath" alt="" />
                        </td>
                        <td>
                            @extraOrders.Extra.Price
                        </td>
                        <td>
                            @extraOrders.Quantity
                        </td>
                        <td>
                            @(extraOrders.Extra.Price * extraOrders.Quantity)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    @{
        if(Model.OrderStatus == OrderStatus.Delivered)
        {
            <a asp-action="Delivered">Back to List Delivered</a>
            <br />
        }
        else
        {
            <a asp-action="OnTheWay">Back to List OnTheWay</a>
            <br />
        }
        <a asp-controller="Finance" asp-action="Index">Financial Table</a>
    }
</div>