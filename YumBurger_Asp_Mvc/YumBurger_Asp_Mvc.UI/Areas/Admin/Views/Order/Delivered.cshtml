@model IEnumerable<YumBurger_Asp_Mvc.UI.Models.Order>

@{
    ViewData["Title"] = "Delivered";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center bg-warning bg-gradient text-dark">Delivered</h1>

<table class="table table-dark table-striped table-hover table-responsive-md text-sm-center">
    <thead>
        <tr>
            <th>
                Order Number
            </th>
            <th>
                Order Date
            </th>
            <th>
                Estimated Arrival Date
            </th>
            <th>
                Actual Arrival Date
            </th>
            <th>
                Total Price
            </th>
            <th>
                User
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.OrderDate
                </td>
                <td>
                    @item.EstimatedArrivalDate
                </td>
                <td>
                    @item.ActualArrivalDate
                </td>
                <td>
                    @item.TotalPrice
                </td>
                <td>
                    @item.AppUser.Email
                </td>
                <td>
                    <form>
                        <button type="submit" class="btn btn-outline-success text-white" asp-action="Details" asp-route-id="@item.Id">Show</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
